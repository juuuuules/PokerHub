{
    "editor.fontSize": 16,
    "editor.mouseWheelZoom": true,
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.fixAll": true,
        "source.sortImports": true
    },

    "prettier.useTabs": true,
    "prettier.singleQuote": false,
    "prettier.endOfLine": "auto",
    "[html]": {
        "editor.formatOnSave": false
      },

    "window.zoomLevel": 0

}